{
  "compilerOptions": {
    "target": "es2017",                                
    "module": "commonjs",            
    "allowJs": true,                 
    "esModuleInterop": true,                        
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,       
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "rootDir": "./src", 
    "strict": true,
    "typeRoots": [
      "./custom_typings",
      "./node_modules/@types"
    ], 
    "skipLibCheck": true,  
    "forceConsistentCasingInFileNames": true 
  },
  "include": [
    "src/**/*.ts"
  ]
}
